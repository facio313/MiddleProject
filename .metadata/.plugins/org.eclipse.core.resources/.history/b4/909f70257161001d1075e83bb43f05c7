package volunteer.service;

import java.util.List;

import volunteer.dao.IShowListDao;
import volunteer.dao.IVolDao;
import volunteer.dao.ShowListDao;
import volunteer.vo.ListVO;

public class VolService implements IVolService {

	private IVolDao dao;
	private static IVolService service;
	private VolDao() {
		dao = VolDao.getInstance();
	}
	public static IVolService getInstance() {
		if (service == null) {
			service = new ShowListService();
		}
		return service;
	}
	
	@Override
	public List<ListVO> showList() {
		
		List<ListVO> volList = dao.showList();
		
		return volList;
	}

}
