package list.controller;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import list.service.IShowListService;
import list.service.ShowListService;
import list.vo.ListVO;

@WebServlet("/showList.do")
public class ShowListController extends HttpServlet {

	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		IShowListService service = ShowListService.getInstance();
		List<ListVO> list = service.showList();
		
		req.setAttribute("list", list);

//		RequestDispatcher disp = req.getRequestDispatcher("/list.jsp");
//		disp.forward(req, resp);
		
		RequestDispatcher dispd = req.getRequestDispatcher("/detail.jsp");
		dispd.forward(req, resp);
		
	}
	
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		doGet(req, resp);
	}
}
